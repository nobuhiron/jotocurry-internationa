---
import Layout from '../../layouts/Layout.astro';
import SectionPageHero from '../../sections/SectionPageHero.astro';
import SectionBrandOrigin from '../../sections/SectionBrandOrigin.astro';
import SectionBrandUnique from '../../sections/SectionBrandUnique.astro';
import SectionBrandMenu from '../../sections/SectionBrandMenu.astro';
import SectionBrandHistory from '../../sections/SectionBrandHistory.astro';
import { translations } from '../../data/translations';
import type { Locale } from '../../lib/i18n';

export async function getStaticPaths() {
  return [
    { params: { lang: 'ja' } },
    { params: { lang: 'en' } },
  ];
}

const { lang } = Astro.params;
const locale = (lang as Locale) || 'ja';
const brandPageText = translations.brand.page[locale];
---

<Layout title={brandPageText.title} locale={locale}>
	<SectionPageHero
		title={brandPageText.heroTitle}
		subtitle={brandPageText.heroSubtitle}
	/>
	<SectionBrandOrigin locale={locale} />
	<SectionBrandUnique locale={locale} />
	<SectionBrandMenu locale={locale} />
	<SectionBrandHistory locale={locale} />
</Layout>
