---
interface Props {
  href?: string;
  text: string;
  variant?: 'primary' | 'secondary';
  icon?: string;
  class?: string;
}

const {
  href = '#',
  text,
  variant = 'primary',
  icon,
  class: className = ''
} = Astro.props;
---

<a
  href={href}
  class={`c-button ${className}`}
  data-variant={variant}
>
  <span class="c-button__text">{text}</span>
  {icon && (
    <span class="c-button__icon" aria-hidden="true">
      {icon}
    </span>
  )}
</a>

