---
import { getImage } from 'astro:assets';
import Image from 'astro/components/Image.astro';
import type { ImageMetadata } from 'astro';

interface Props {
  title: string;
  subtitle: string;
  backgroundImage?: ImageMetadata;
}

const { title, subtitle, backgroundImage } = Astro.props;
---

<section class="p-page-hero">
  {backgroundImage && (
    <div class="p-page-hero__image" aria-hidden="true">
      <Image
        src={backgroundImage}
        alt=""
        width={1920}
        height={1080}
        loading="eager"
        fetchpriority="high"
      />
    </div>
  )}
  <div class="p-page-hero__background" aria-hidden="true"></div>
  <div class="l-container">
    <div class="p-page-hero__inner">
      <h1 class="p-page-hero__title">{title}</h1>
      <p class="p-page-hero__subtitle">{subtitle}</p>
    </div>
  </div>
</section>

