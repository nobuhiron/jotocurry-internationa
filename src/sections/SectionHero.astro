---
import { getImage } from 'astro:assets';
import Button from '../components/Button.astro';
import heroImage from '../assets/images/hero-img.jpg';
import Image from 'astro/components/Image.astro';
import ContactButton from '../components/ContactButton.astro';
import { getTranslation } from '../data/translations';
import type { Locale } from '../lib/i18n';

interface Props {
  locale?: Locale;
}

const { locale = 'ja' } = Astro.props;
const heroText = getTranslation('hero', locale);
---

<section class="p-hero" >
  <div class="p-hero__image">
          <Image src={heroImage} alt={locale === 'en' ? 'Hero image' : 'ヒーローイメージ'} width={1920} height={1080} />
      <div class="p-hero__overlay"></div>
  </div>
    <div class="p-hero__content">
      <header class="p-hero__header">
      <div class="p-hero__badge">{heroText.badge}</div>
      <h1 class="p-hero__title" set:html={heroText.title} />
      </header>
      <ul class="p-hero__features">
        {heroText.features.map((feature) => (
          <li class="p-hero__feature">{feature}</li>
        ))}
      </ul>
    </div>
    <div class="p-hero__bottom-section">
      <p class="p-hero__description" set:html={heroText.description} />
      <div class="p-hero__buttons p-hero__buttons--desktop">
        <ContactButton
          text={heroText.buttons.primary}
          class="p-hero__button"
          href="#contact-form"
        />
        <Button
          text={heroText.buttons.secondary}
          variant="secondary"
          icon="↓"
          class="p-hero__button"
        />
      </div>
  </div>
</section>

