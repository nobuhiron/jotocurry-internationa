---
import SectionTitle from '../components/SectionTitle.astro';
import { translations } from '../data/translations';
import { getLocalizedPath } from '../lib/i18n';
import type { Locale } from '../lib/i18n';

interface Props {
  locale?: Locale;
}

const { locale = 'ja' } = Astro.props;
const formText = translations.contact.form[locale];
---

<section class="p-contact-form l-section" data-bg="white" id="section-contact-form">
  <div class="l-container">
    <div class="p-contact-form__inner l-section__inner" data-gap="4xl">
      <div class="p-contact-form__info">
        <SectionTitle
          title={formText.title}
          subtitle={formText.subtitle}
          class="p-contact-form__title"
        />

        <div class="p-contact-form__contact">
          <div class="p-contact-form__contact-item">
            <span class="p-contact-form__contact-icon" aria-hidden="true">‚úâ</span>
            <div class="p-contact-form__contact-details">
              <a href="mailto:kawakami@tokumasa.net" class="p-contact-form__contact-link">kawakami@tokumasa.net</a>
              <a href="mailto:kato@tokumasa.net" class="p-contact-form__contact-link">kato@tokumasa.net</a>
            </div>
          </div>

          <div class="p-contact-form__contact-item">
            <span class="p-contact-form__contact-icon" aria-hidden="true">üìû</span>
            <a href="tel:06-6926-8286" class="p-contact-form__contact-link">06-6926-8286</a>
          </div>

          <div class="p-contact-form__contact-item">
            <span class="p-contact-form__contact-icon" aria-hidden="true">üìç</span>
            <address class="p-contact-form__contact-address">
              {locale === 'ja'
                ? '„Äí541-0052 Â§ßÈò™Â∫úÂ§ßÈò™Â∏Ç‰∏≠Â§ÆÂå∫ÂÆâÂúüÁî∫3-2-16Èï∑Èáé„Éì„É´3F'
                : '3F Nagano Building, 3-2-16 Azuchi-cho, Chuo-ku, Osaka-shi, Osaka 541-0052, Japan'}
            </address>
          </div>
        </div>
      </div>

      <div class="p-contact-form__form-wrapper">
        <div id="form-message" class="p-contact-form__message" role="alert" aria-live="polite"></div>
        <form class="p-contact-form__form" id="contact-form" method="post" novalidate>
          <div class="p-contact-form__row">
            <div class="p-contact-form__field">
              <label for="last-name" class="p-contact-form__label">{formText.fields.lastName}</label>
              <input
                type="text"
                id="last-name"
                name="last-name"
                class="p-contact-form__input"
                required
              />
              <span class="p-contact-form__error" id="error-last-name" role="alert"></span>
            </div>
            <div class="p-contact-form__field">
              <label for="first-name" class="p-contact-form__label">{formText.fields.firstName}</label>
              <input
                type="text"
                id="first-name"
                name="first-name"
                class="p-contact-form__input"
                required
              />
              <span class="p-contact-form__error" id="error-first-name" role="alert"></span>
            </div>
          </div>

          <div class="p-contact-form__field">
            <label for="email" class="p-contact-form__label">{formText.fields.email}</label>
            <input
              type="email"
              id="email"
              name="email"
              class="p-contact-form__input"
              placeholder={formText.fields.emailPlaceholder}
              required
            />
            <span class="p-contact-form__error" id="error-email" role="alert"></span>
          </div>

          <div class="p-contact-form__field">
            <label for="area" class="p-contact-form__label">{formText.fields.area}</label>
            <select
              id="area"
              name="area"
              class="p-contact-form__select"
              required
            >
              <option value="">{formText.fields.areaPlaceholder}</option>
              <option value="asia">{formText.fields.areaOptions.asia}</option>
              <option value="europe">{formText.fields.areaOptions.europe}</option>
              <option value="americas">{formText.fields.areaOptions.americas}</option>
              <option value="oceania">{formText.fields.areaOptions.oceania}</option>
              <option value="other">{formText.fields.areaOptions.other}</option>
            </select>
            <span class="p-contact-form__error" id="error-area" role="alert"></span>
          </div>

          <div class="p-contact-form__field">
            <label for="purpose" class="p-contact-form__label">{formText.fields.purpose}</label>
            <select
              id="purpose"
              name="purpose"
              class="p-contact-form__select"
              required
            >
              <option value="">{formText.fields.purposePlaceholder}</option>
              <option value="franchise">{formText.fields.purposeOptions.franchise}</option>
              <option value="wholesale">{formText.fields.purposeOptions.wholesale}</option>
              <option value="media">{formText.fields.purposeOptions.media}</option>
              <option value="other">{formText.fields.purposeOptions.other}</option>
            </select>
            <span class="p-contact-form__error" id="error-purpose" role="alert"></span>
          </div>

          <fieldset class="p-contact-form__fieldset">
            <legend class="p-contact-form__legend">{formText.fields.situation}</legend>
            <div class="p-contact-form__radio-group">
              <div class="p-contact-form__radio-item">
                <input
                  type="radio"
                  id="situation-1"
                  name="situation"
                  value="restaurant-owner"
                  class="p-contact-form__radio"
                  required
                />
                <label for="situation-1" class="p-contact-form__radio-label">{formText.fields.situationOptions.restaurantOwner}</label>
              </div>
              <div class="p-contact-form__radio-item">
                <input
                  type="radio"
                  id="situation-2"
                  name="situation"
                  value="conversion"
                  class="p-contact-form__radio"
                  required
                />
                <label for="situation-2" class="p-contact-form__radio-label">{formText.fields.situationOptions.conversion}</label>
              </div>
              <div class="p-contact-form__radio-item">
                <input
                  type="radio"
                  id="situation-3"
                  name="situation"
                  value="developer"
                  class="p-contact-form__radio"
                  required
                />
                <label for="situation-3" class="p-contact-form__radio-label">{formText.fields.situationOptions.developer}</label>
              </div>
              <div class="p-contact-form__radio-item">
                <input
                  type="radio"
                  id="situation-4"
                  name="situation"
                  value="individual"
                  class="p-contact-form__radio"
                  required
                />
                <label for="situation-4" class="p-contact-form__radio-label">{formText.fields.situationOptions.individual}</label>
              </div>
            </div>
            <span class="p-contact-form__error" id="error-situation" role="alert"></span>
          </fieldset>

          <div class="p-contact-form__field">
            <label for="message" class="p-contact-form__label">{formText.fields.message}</label>
            <textarea
              id="message"
              name="message"
              class="p-contact-form__textarea"
              rows="6"
              placeholder={formText.fields.messagePlaceholder}
            ></textarea>
          </div>

          <div class="p-contact-form__checkbox-wrapper">
            <input
              type="checkbox"
              id="privacy"
              name="privacy"
              class="p-contact-form__checkbox"
              required
            />
            <label for="privacy" class="p-contact-form__checkbox-label">
              {locale === 'ja' ? (
                <>
                  <a href={getLocalizedPath('/privacy', locale)} class="p-contact-form__privacy-link">{formText.fields.privacy}</a>
                  {formText.fields.privacyAgree}
                </>
              ) : (
                <>
                  {formText.fields.privacyAgree} <a href={getLocalizedPath('/privacy', locale)} class="p-contact-form__privacy-link">{formText.fields.privacy}</a>
                </>
              )}
            </label>
            <span class="p-contact-form__error" id="error-privacy" role="alert"></span>
          </div>

          <div class="p-contact-form__submit">
            <button
              type="submit"
              class="c-button p-contact-form__submit-button"
              data-variant="primary"
              id="submit-button"
            >
              <span class="c-button__text" id="submit-button-text">{formText.fields.submit}</span>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script define:vars={{ locale, messages: formText.messages, submitText: formText.fields.submit }}>
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initForm);
  } else {
    initForm();
  }

  function initForm() {
    const form = document.getElementById('contact-form');
    const submitButton = document.getElementById('submit-button');
    const submitButtonText = document.getElementById('submit-button-text');
    const messageDiv = document.getElementById('form-message');

    if (!form || !submitButton || !submitButtonText || !messageDiv) {
      return;
    }

    const errorElements = {
      'last-name': document.getElementById('error-last-name'),
      'first-name': document.getElementById('error-first-name'),
      email: document.getElementById('error-email'),
      area: document.getElementById('error-area'),
      purpose: document.getElementById('error-purpose'),
      situation: document.getElementById('error-situation'),
      privacy: document.getElementById('error-privacy'),
    };

    function clearAllErrors() {
      Object.values(errorElements).forEach((el) => {
        if (el) {
          el.textContent = '';
          el.classList.remove('is-visible');
          el.removeAttribute('style');
        }
      });
    }

    function showFieldError(fieldName, message) {
      const errorEl = errorElements[fieldName];
      if (!errorEl) return;
      errorEl.textContent = message;
      errorEl.classList.add('is-visible');
      errorEl.removeAttribute('style');

      const field = form.querySelector(`[name="${fieldName}"]`);
      if (field) {
        field.focus();
        field.scrollIntoView({ behavior: 'smooth', block: 'center' });
      }
    }

    function validateForm() {
      clearAllErrors();
      let isValid = true;

      const formData = new FormData(form);
      const lastName = formData.get('last-name')?.toString().trim() || '';
      const firstName = formData.get('first-name')?.toString().trim() || '';
      const email = formData.get('email')?.toString().trim() || '';
      const area = formData.get('area')?.toString() || '';
      const purpose = formData.get('purpose')?.toString() || '';
      const situation = formData.get('situation')?.toString() || '';
      const privacy = formData.get('privacy')?.toString() || '';

      if (!lastName) {
        showFieldError('last-name', messages.errors.lastName);
        isValid = false;
      }

      if (!firstName) {
        showFieldError('first-name', messages.errors.firstName);
        isValid = false;
      }

      if (!email || !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
        showFieldError('email', messages.errors.email);
        isValid = false;
      }

      if (!area) {
        showFieldError('area', messages.errors.area);
        isValid = false;
      }

      if (!purpose) {
        showFieldError('purpose', messages.errors.purpose);
        isValid = false;
      }

      if (!situation) {
        showFieldError('situation', messages.errors.situation);
        isValid = false;
      }

      if (privacy !== 'on') {
        showFieldError('privacy', messages.errors.privacy);
        isValid = false;
      }

      return isValid;
    }

    function showMessage(text, type) {
      messageDiv.textContent = text;
      messageDiv.className = `p-contact-form__message p-contact-form__message--${type}`;
      messageDiv.style.display = 'block';
      if (type === 'success') {
        messageDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }
    }

    function hideMessage() {
      messageDiv.style.display = 'none';
      messageDiv.textContent = '';
    }

    function setLoading(isLoading) {
      submitButton.disabled = isLoading;
      submitButtonText.textContent = isLoading ? messages.submitting : submitText;
    }

    form.addEventListener('input', (e) => {
      const fieldName = e.target.name;
      if (fieldName && errorElements[fieldName]) {
        const errorEl = errorElements[fieldName];
        errorEl.textContent = '';
        errorEl.classList.remove('is-visible');
        errorEl.removeAttribute('style');
      }
    });

    form.addEventListener('change', (e) => {
      const fieldName = e.target.name;
      if (fieldName && errorElements[fieldName]) {
        const errorEl = errorElements[fieldName];
        errorEl.textContent = '';
        errorEl.classList.remove('is-visible');
        errorEl.removeAttribute('style');
      }
    });

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      hideMessage();
      clearAllErrors();

      if (!validateForm()) {
        return;
      }

      const formData = new FormData(form);
      formData.append('locale', locale);

      setLoading(true);

      try {
        const response = await fetch('/api/contact', {
          method: 'POST',
          body: formData,
        });

        const result = await response.json();

        if (result.success) {
          showMessage(messages.success, 'success');
          form.reset();
          clearAllErrors();
        } else if (result.error === 'validation_error') {
          showMessage(messages.validationError, 'error');
        } else {
          showMessage(messages.error, 'error');
        }
      } catch (error) {
        console.error('Form submission error:', error);
        showMessage(messages.error, 'error');
      } finally {
        setLoading(false);
      }
    });
  }
</script>

<style>
  .p-contact-form__message {
    display: none;
    padding: 1rem;
    margin-bottom: 1.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .p-contact-form__message--success {
    background-color: #d1fae5;
    color: #065f46;
    border: 1px solid #6ee7b7;
  }

  .p-contact-form__message--error {
    background-color: #fee2e2;
    color: #991b1b;
    border: 1px solid #fca5a5;
  }

  .p-contact-form__submit-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .p-contact-form__error {
    display: none !important;
    color: #dc2626;
    font-size: 0.875rem;
    margin-top: 0.5rem;
    line-height: 1.5;
  }

  .p-contact-form__error.is-visible,
  .p-contact-form__error[style*="display: block"] {
    display: block !important;
  }

  .p-contact-form__fieldset .p-contact-form__error {
    margin-top: 1rem;
  }

  .p-contact-form__checkbox-wrapper .p-contact-form__error {
    margin-top: 0.5rem;
    display: block;
  }
</style>

