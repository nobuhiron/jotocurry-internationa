---
import SectionTitle from '../components/SectionTitle.astro';
import Button from '../components/Button.astro';
import BrandHistoryItem from '../components/BrandHistoryItem.astro';
import brandHistoryImage1 from '../assets/images/brand-history-1.jpg';
import brandHistoryImage2 from '../assets/images/brand-history-2.jpg';
import brandHistoryImage3 from '../assets/images/brand-history-3.jpg';

const brandHistoryImages = [brandHistoryImage1, brandHistoryImage2, brandHistoryImage3];
const brandHistoryImageAlts = ['グルメの街。大阪で誕生', 'ナショナルブランドへと成長', 'グローバルブランドへと成長'];
import { translations } from '../data/translations';
import type { Locale } from '../lib/i18n';

interface Props {
  locale?: Locale;
}

const { locale = 'ja' } = Astro.props;
const historyText = translations.brand.history[locale];
---

<section class="p-brand-history l-section" data-bg="white" id="section-brand-history">
  <div class="l-container">
    <div class="p-brand-history__inner l-section__inner">
      <SectionTitle
        title={historyText.title}
        class="p-brand-history__title"
      />
      <div class="p-brand-history__intro">
        <p class="p-brand-history__intro-text">{historyText.intro}</p>
        <div class="p-brand-history__button">
          <Button
            text={historyText.button}
            variant="secondary"
            icon="→"
            href="#contact"
          />
        </div>
      </div>
      <div class="p-brand-history__timeline">
        {historyText.timeline.map((item, index) => (
          <BrandHistoryItem
            imageSrc={brandHistoryImages[index]}
            imageAlt={brandHistoryImageAlts[index]}
            year={item.year}
            heading={item.heading}
            description={item.description}
          />
        ))}
      </div>
    </div>
  </div>
</section>

<script>
  import initBrandHistoryAnimation from '../scripts/brand-history-animation.js';

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initBrandHistoryAnimation);
  } else {
    initBrandHistoryAnimation();
  }
</script>
