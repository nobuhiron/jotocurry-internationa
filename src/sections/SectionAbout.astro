---
import Button from '../components/Button.astro';
import Image from 'astro/components/Image.astro';
import mapImage from '../assets/images/map.jpg';
import { getTranslation } from '../data/translations';
import type { Locale } from '../lib/i18n';

interface Props {
  locale?: Locale;
}

const { locale = 'ja' } = Astro.props;
const aboutText = getTranslation('about', locale);
---

<section class="p-about l-section" data-bg="white">
  <div class="l-container">
    <div class="p-about__inner l-section__inner" data-gap="4xl">
      <h2 class="p-about__title">{aboutText.title}</h2>
    </div>
  </div>
  <div class="p-about__world-map">
    <div class="p-about__world-map__image" aria-label={locale === 'en' ? 'World map' : '世界地図'}>
      <Image src={mapImage} alt={locale === 'en' ? 'World map' : '世界地図'} />
    </div>
    <div class="p-about__world-map__overlay"></div>
    <div class="p-about__content">
      <p class="p-about__text">{aboutText.description}</p>
      <div class="p-about__button">
        <Button
          text={aboutText.button}
          variant="primary"
        />
      </div>
    </div>
  </div>
</section>

<script>
  import initAboutAnimation from '../scripts/about-animation.js';

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initAboutAnimation);
  } else {
    initAboutAnimation();
  }
</script>
