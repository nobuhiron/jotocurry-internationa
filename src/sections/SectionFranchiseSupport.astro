---
import SectionTitle from '../components/SectionTitle.astro';
import { translations } from '../data/translations';
import type { Locale } from '../lib/i18n';

interface Props {
  locale?: Locale;
}

const { locale = 'ja' } = Astro.props;
const supportText = translations.franchise.support[locale];
---

<section class="p-franchise-support l-section" data-bg="white">
  <div class="l-container">
    <div class="p-franchise-support__inner l-section__inner">
      <SectionTitle
        title={supportText.title}
        subtitle={supportText.subtitle}
        class="p-franchise-support__title"
      />
      <div class="p-franchise-support__content">
        <div class="p-franchise-support__image">
          <div class="p-franchise-support__image-placeholder" aria-hidden="true"></div>
        </div>
        <div class="p-franchise-support__text-blocks">
          {supportText.blocks.map((block) => (
            <div class="p-franchise-support__block">
              <h3 class="p-franchise-support__block-title">{block.title}</h3>
              <p class="p-franchise-support__block-description">{block.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

