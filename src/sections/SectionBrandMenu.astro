---
import SectionTitle from '../components/SectionTitle.astro';
import Image from 'astro/components/Image.astro';
import signatureCurry from '../assets/images/signature-curry.jpg';
import menuItem1 from '../assets/images/menu-item-1.jpg';
import menuItem2 from '../assets/images/menu-item-2.jpg';
import menuItem3 from '../assets/images/menu-item-3.jpg';
import menuItem4 from '../assets/images/menu-item-4.jpg';
import menuItem5 from '../assets/images/menu-item-5.jpg';
import menuItem6 from '../assets/images/menu-item-6.jpg';
import { translations } from '../data/translations';
import type { Locale } from '../lib/i18n';

interface Props {
  locale?: Locale;
}

const { locale = 'ja' } = Astro.props;
const menuText = translations.brand.menu[locale];
const menuItemImages = [
  menuItem1,
  menuItem2,
  menuItem3,
  menuItem4,
  menuItem5,
  menuItem6,
];
---

<section class="p-brand-menu l-section" data-bg="white" id="section-brand-menu">
  <div class="l-container">
    <div class="p-brand-menu__inner l-section__inner" data-gap="4xl">

      <div class="p-brand-menu__header">
      <SectionTitle
        title={menuText.title}
        class="p-brand-menu__title"
      />
      <div class="p-brand-menu__description">
              {menuText.paragraphs.map((paragraph) => (
          <p class="p-brand-menu__paragraph">{paragraph.text}</p>
        ))}
        </div>
      </div>
<div class="p-brand-menu__image">
            <Image src={signatureCurry} alt={menuText.imageAlt} width={500} height={500} />
          </div>
      <div class="p-brand-menu__popular">
        <h3 class="p-brand-menu__popular-title">{menuText.popularTitle}</h3>
        <div class="p-brand-menu__popular-grid">
          {menuText.menuItems.map((item, index) => (
            <div class="p-brand-menu__popular-card">
              <div class="p-brand-menu__popular-card-image">
                <Image src={menuItemImages[index]} alt={item.alt} width={500} height={500} />
              </div>
              <div class="p-brand-menu__popular-card-content">
                <span class="p-brand-menu__popular-card-category">{item.category}</span>
                <h4 class="p-brand-menu__popular-card-name">{item.name}</h4>
              </div>
            </div>
          ))}
        </div>
      </div>
      </div>
            </div>
            </div>
    </div>
  </div>
</section>

