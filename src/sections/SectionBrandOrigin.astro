---
import SectionTitle from '../components/SectionTitle.astro';
import Image from 'astro/components/Image.astro';
import brandOrigin1 from '../assets/images/brand-origin-1.jpg';
import brandOrigin2 from '../assets/images/brand-origin-2.jpg';
import { translations } from '../data/translations';
import type { Locale } from '../lib/i18n';

interface Props {
  locale?: Locale;
}

const { locale = 'ja' } = Astro.props;
const originText = translations.brand.origin[locale];
---

<section class="p-brand-origin l-section" data-bg="white">
  <div class="l-container">
    <div class="p-brand-origin__inner l-section__inner">
      <SectionTitle
        title={originText.title}
        class="p-brand-origin__title"
      />
      <div class="p-brand-origin__content">
        <div class="p-brand-origin__column">
          <div class="p-brand-origin__image">
            <div class="p-brand-origin__image-placeholder">
              <Image src={brandOrigin1} alt={originText.imageAlt} width={500} height={500} />
            </div>
          </div>
          <div class="p-brand-origin__text">
            {originText.paragraphs.slice(0, 2).map((paragraph) => (
              <p class="p-brand-origin__paragraph">{paragraph.text}</p>
            ))}
          </div>
        </div>
        <div class="p-brand-origin__column">
          <div class="p-brand-origin__image">
            <div class="p-brand-origin__image-placeholder">
              <Image src={brandOrigin2} alt={originText.imageAlt} width={500} height={500} />
            </div>
          </div>
          <div class="p-brand-origin__text">
            {originText.paragraphs.slice(2, 4).map((paragraph) => (
              <p class="p-brand-origin__paragraph">{paragraph.text}</p>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

