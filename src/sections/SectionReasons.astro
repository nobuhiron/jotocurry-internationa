---
import SectionTitle from '../components/SectionTitle.astro';
import ReasonCard from '../components/ReasonCard.astro';
import Button from '../components/Button.astro';
import { getTranslation } from '../data/translations';
import type { Locale } from '../lib/i18n';

interface Props {
  locale?: Locale;
}

const { locale = 'ja' } = Astro.props;
const reasonsText = getTranslation('reasons', locale);
---

<section class="p-reasons l-section" data-bg="alt">
  <div class="l-container">
    <div class="p-reasons__inner l-section__inner">
      <SectionTitle
        title={reasonsText.title}
        class="p-reasons__title"
      />
      <div class="p-reasons__cards">
        {reasonsText.cards.map((card) => (
          <ReasonCard
            number={card.number}
            title={card.title}
            description={card.description}
            icon={card.icon}
            class="p-reasons__card"
          />
        ))}
      </div>
      <div class="p-reasons__buttons">
        {reasonsText.buttons.map((buttonText) => (
          <Button
            text={buttonText}
            variant="secondary"
            class="p-reasons__button"
          />
        ))}
      </div>
    </div>
  </div>
</section>

