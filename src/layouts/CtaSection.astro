---
import ContactButton from '../components/ContactButton.astro';
import { getTranslation } from '../data/translations';
import type { Locale } from '../lib/i18n';

interface Props {
  locale?: Locale;
}

const { locale = 'ja' } = Astro.props;
const ctaText = getTranslation('cta', locale);
---

<section class="l-cta-section">
  <div class="l-container">
  <div class="l-cta-section__inner">
    <header class="l-cta-section__header">
    <h2 class="l-cta-section__title">
      {ctaText.title}
    </h2>
    <div class="l-cta-section__description">
    <ul class="l-cta-section__list">
      {ctaText.questions.map((question) => (
        <li class="l-cta-section__item">
          {question}
        </li>
      ))}
    </ul>
    <p class="l-cta-section__text">
      {ctaText.text}
    </p>
    </div>
    </header>
    <div class="l-cta-section__button">
      <ContactButton text={ctaText.button} />
    </div>
    </div>
  </div>
</section>

