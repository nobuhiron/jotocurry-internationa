---
import '../styles/style.css';
import Header from './Header.astro';
import Footer from './Footer.astro';
import CtaSection from './CtaSection.astro';
import type { Locale } from '../lib/i18n';

interface Props {
  title: string;
  locale?: Locale;
}

const { title, locale = 'ja' } = Astro.props;
const htmlLang = locale === 'en' ? 'en' : 'ja';
---

<!DOCTYPE html>
<html lang={htmlLang}>
  <head>
    <meta charset="utf-8" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP:wght@600;700&family=Noto+Sans+JP:wght@400;500&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="l-body">
    <Header locale={locale} />
    <main class="l-main">
      <slot />
    </main>
    <CtaSection locale={locale} />
    <Footer locale={locale} />
  </body>
</html>

