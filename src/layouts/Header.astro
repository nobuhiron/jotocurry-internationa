---
import Button from '../components/Button.astro';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import { getLocalizedPath } from '../lib/i18n';
import { getTranslation } from '../data/translations';
import type { Locale } from '../lib/i18n';

interface Props {
  locale?: Locale;
}

const { locale = 'ja' } = Astro.props;
// 現在のパスから言語プレフィックスを除去
const currentPath = Astro.url.pathname.replace(/^\/(ja|en)/, '') || '/';

// 翻訳データを取得
const headerText = getTranslation('header', locale);
const footerText = getTranslation('footer', locale);

// Navigation items
const navItems = [
  { label: headerText.nav.brand, href: getLocalizedPath('/brand', locale) },
  { label: headerText.nav.franchise, href: getLocalizedPath('/franchise', locale) },
  { label: headerText.nav.support, href: getLocalizedPath('/franchise#section-franchise-support', locale) },
  { label: headerText.nav.faq, href: getLocalizedPath('/contact#section-contact-faq', locale) },
];
---

<header class="l-header">
  <div class="l-header__inner">
    <!-- Logo -->
    <div class="l-header__logo">
      <a href={getLocalizedPath('/', locale)} class="l-header__logo-link">
        <img src="/logo.svg" alt={headerText.logoAlt} width={722} height={160} />
      </a>
    </div>
    <!-- Desktop Navigation -->
    <nav class="l-header__nav" aria-label={headerText.ariaLabels.mainNav}>
      <ul class="l-header__nav-list">
        {navItems.map((item) => (
          <li class="l-header__nav-item">
            <a href={item.href} class="l-header__nav-link">
              {item.label}
            </a>
          </li>
        ))}

        <!-- Language Switcher -->
        <li class="l-header__nav-item">
          <LanguageSwitcher currentLocale={locale} currentPath={currentPath} />
        </li>
      </ul>
      <!-- Contact Button (Desktop) -->
      <div class="l-header__contact">
        <Button
          text={footerText.nav.contact}
          variant="primary"
          href={getLocalizedPath('/contact#section-contact-form', locale)}
        />
      </div>
    </nav>


    <!-- Mobile Menu Toggle -->
    <button
      class="l-header__menu-toggle"
      aria-expanded="false"
      aria-label={headerText.ariaLabels.openMenu}
      aria-controls="mobile-menu"
      onclick="toggleMobileMenu()"
    >
      <span class="l-header__menu-toggle-icon">
        <span></span>
        <span></span>
        <span></span>
      </span>
    </button>
  </div>

  <!-- Mobile Menu Overlay -->
  <div class="l-header__mobile-menu-overlay" id="mobile-menu-overlay" onclick="closeMobileMenu()"></div>

  <!-- Mobile Menu -->
  <div class="l-header__mobile-menu" id="mobile-menu">
    <div class="l-header__mobile-menu-header">
      <a href={getLocalizedPath('/', locale)} class="l-header__mobile-menu-logo">
        <img src="/logo.svg" alt={headerText.logoAlt} width={722} height={160} />
      </a>
      <button
        class="l-header__mobile-menu-close"
        aria-label={headerText.ariaLabels.closeMenu}
        onclick="closeMobileMenu()"
      >
        ×
      </button>
    </div>

    <nav class="l-header__mobile-nav" aria-label={headerText.ariaLabels.mobileNav}>
      <ul class="l-header__mobile-nav-list">
        {navItems.map((item) => (
          <li class="l-header__mobile-nav-item">
            <a href={item.href} class="l-header__mobile-nav-link">
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <!-- Mobile Language Switcher -->
    <div class="l-header__mobile-language">
      <LanguageSwitcher currentLocale={locale} currentPath={currentPath} />
    </div>

    <!-- Mobile Contact Button -->
    <div class="l-header__mobile-contact">
      <Button
        text={footerText.nav.contact}
        variant="primary"
        href={getLocalizedPath('/contact#section-contact-form', locale)}
      />
    </div>
  </div>
</header>

<script is:inline src="/header.js"></script>


